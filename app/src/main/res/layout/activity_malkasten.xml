<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:background="@color/white"
    tools:context=".MalkastenActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="match_parent">
        <de.ludetis.android.view.ColorChooserView
            android:layout_width="@dimen/chooser_size"
            android:layout_height="@dimen/chooser_size"
            custom:color="#d01020"/>
        <de.ludetis.android.view.ColorChooserView
            android:layout_width="@dimen/chooser_size"
            android:layout_height="@dimen/chooser_size"
            custom:color="#7020f0"/>
        <de.ludetis.android.view.ColorChooserView
            android:layout_width="@dimen/chooser_size"
            android:layout_height="@dimen/chooser_size"
            custom:color="#1060d0"/>
        <de.ludetis.android.view.ColorChooserView
            android:layout_width="@dimen/chooser_size"
            android:layout_height="@dimen/chooser_size"
            custom:color="#f0e000"/>
        <de.ludetis.android.view.ColorChooserView
            android:layout_width="@dimen/chooser_size"
            android:layout_height="@dimen/chooser_size"
            custom:color="#f08020"/>

        <ImageView
            android:id="@+id/share"
            android:layout_width="@dimen/chooser_size"
            android:layout_height="@dimen/chooser_size"
            android:src="@drawable/share"/>

        </LinearLayout>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="match_parent">

        <de.ludetis.android.view.ColorChooserView
            android:layout_width="@dimen/chooser_size"
            android:layout_height="@dimen/chooser_size"
            custom:color="#101010"/>
        <de.ludetis.android.view.ColorChooserView
            android:layout_width="@dimen/chooser_size"
            android:layout_height="@dimen/chooser_size"
            custom:color="#e0e0e0"/>
        <de.ludetis.android.view.ColorChooserView
            android:layout_width="@dimen/chooser_size"
            android:layout_height="@dimen/chooser_size"
            custom:color="#508020"/>
        <de.ludetis.android.view.ColorChooserView
            android:layout_width="@dimen/chooser_size"
            android:layout_height="@dimen/chooser_size"
            custom:color="#80d020"/>
        <de.ludetis.android.view.ColorChooserView
            android:layout_width="@dimen/chooser_size"
            android:layout_height="@dimen/chooser_size"
            custom:color="#804040"/>

        <ImageView
            android:id="@+id/trash"
            android:layout_width="@dimen/chooser_size"
            android:layout_height="@dimen/chooser_size"
            android:src="@drawable/trash"/>
    </LinearLayout>

    <ImageView
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:id="@+id/image"
        android:layout_weight="1"/>
</LinearLayout>
